<section class="bg-cyan-100 py-12">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-cyan-700 text-center mb-6">
      Get in Touch
    </h2>
    <p class="text-cyan-600 text-center mb-8">
      Feel free to reach out via the form or connect with me through the links
      below.
    </p>

    <!-- Contact Form -->
    <form class="bg-white shadow-md rounded-lg p-6">
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
        <div>
          <label for="name" class="block text-cyan-700 font-medium mb-2"
            >Your Name</label
          >
          <input
            type="text"
            id="name"
            class="w-full px-4 py-2 border border-cyan-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:outline-none"
            placeholder="Enter your name"
          />
        </div>
        <div>
          <label for="email" class="block text-cyan-700 font-medium mb-2"
            >Your Email</label
          >
          <input
            type="email"
            id="email"
            class="w-full px-4 py-2 border border-cyan-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:outline-none"
            placeholder="Enter your email"
          />
        </div>
      </div>
      <div class="mt-4">
        <label for="message" class="block text-cyan-700 font-medium mb-2"
          >Your Message</label
        >
        <textarea
          id="message"
          rows="5"
          class="w-full px-4 py-2 border border-cyan-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:outline-none"
          placeholder="Write your message here"></textarea>
      </div>
      <div class="mt-6 text-center">
        <button
          type="submit"
          class="bg-cyan-500 text-white font-medium px-6 py-3 rounded-lg shadow-md hover:bg-cyan-600 focus:outline-none focus:ring-2 focus:ring-cyan-400"
        >
          Send Message
        </button>
      </div>
    </form>

    <!-- Social Links -->
    <div class="mt-8 text-center">
      <p class="text-cyan-600 mb-4">Or connect with me:</p>
      <div class="flex justify-center gap-6">
        <a
          href="https://github.com/irenepintor"
          target="_blank"
          class="text-cyan-700 hover:text-cyan-500 text-2xl"
          aria-label="GitHub"
        >
          <i class="fa-brands fa-github"></i>
          <!-- Font Awesome Icon -->
        </a>
        <a
          href="https://linkedin.com/irene-pintor"
          target="_blank"
          class="text-cyan-700 hover:text-cyan-500 text-2xl"
          aria-label="LinkedIn"
        >
          <i class="fa-brands fa-linkedin-in"></i>
          <!-- Font Awesome Icon -->
        </a>
        <a
          href="mailto:pintor.irene@outlook.com"
          class="text-cyan-700 hover:text-cyan-500 text-2xl"
          aria-label="Email"
        >
          <i class="fa-regular fa-envelope"></i>
          <!-- Font Awesome Icon -->
        </a>
      </div>
    </div>
  </div>
</section>

